# Load environment for this repo
dotenv_if_exists() {
  if command -v shdotenv >/dev/null 2>&1; then
    eval "$(shdotenv -f .env -q)" || true
  elif command -v direnv >/dev/null 2>&1; then
    # Fallback to direnv stdlib if shdotenv missing
    has() { type "$1" &>/dev/null; }
  fi
}

dotenv_if_exists

# Add repo scripts to PATH for convenience
export PATH="$(pwd -P)/scripts:$PATH"

